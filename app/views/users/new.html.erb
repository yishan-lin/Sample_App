<%= provide(:title, "Sign Up") %>
<h1>Sign Up</h1>

<div class= "row">
  <div class = "col-md-6  col-md-offset-3">
    <%= form_for(@user) do |x| %>

      <%= render 'shared/error_messages' %>

      <%= x.label :Your_name %>
      <%= x.text_field :name %>

      <%= x.label :EMAIL_ADDRESS %>
      <%= x.text_field :email %>

      <%= x.label :Your_Password %>
      <%= x.text_field :password %>

      <%= x.label :Confirm_Password %>
      <%= x.text_field :password_confirmation%>

      <%= x.label :General_Comments %>
      <%= x.text_area :comment %>

      <%= x.submit "Create an account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
